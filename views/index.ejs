<!DOCTYPE html>
<html lang="en">

<%- include('layouts/header'); -%>

<body>
    <header id="mainHead">
        <div>
            <p>월간 일정표</p>
        </div>
    </header>
    <br>
    <div class="container">
        <section id="mainSec">
            <div>
                <input type="image" src="icons/left-arrow.png" onclick="shiftMonth(-1);return false;">
                <span id="mainMonth"><script>showMonth();</script></span>
                <input type="image" src="icons/right-arrow.png" onclick="shiftMonth(1);return false;">
            </div>
            <table id="mainCal">
                <script>
                    makeMainCal();
                </script>
            </table>
        </section>
    </div>
    <section id="boardSec">
        <div id="todayTodo">
            <h3 style="text-align: center;">오늘의 할일</h3>
            <hr>
            <ul id="mainTodoLi"></ul>
            <% if(todayList) { %>
            <% for(var i = 0; i < todayList.todoList.length; i++) { %>
            <li><%= todayList.todoList[i].activity %></li>
            <% } %>
            <% } %>
        </div>
    </section>
</body>
</html>